.header
  font-family 'Operator Mono XLight Italic'
  // Golden ratio
  letter-spacing 0.618px
  font-size 24px
  position absolute
  top 0px
  width 100vw
  background $ivory
  color $codeText
  height 48px
  line-height 48px
  display flex
  align-items center
  justify-content space-between
  box-shadow 0 3px 4px 0 rgba(0, 0, 0, 0.14),
    0 3px 3px -2px rgba(0, 0, 0, 0.12),
    0 1px 8px 0 rgba(0, 0, 0, 0.2)
  will-change transform
  {noSelect}
  z-index zHeader
  i
    margin 0px 8px
    cursor pointer
